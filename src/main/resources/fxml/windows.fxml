<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="windowRoot" prefHeight="300.0" prefWidth="400.0" styleClass="custom-window" stylesheets="@window.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.micheljung.fxborderlessscene.borderless.WindowController">
   <Pane fx:id="windowContent" prefHeight="200.0" prefWidth="200.0" />
  <HBox fx:id="controlBox" alignment="TOP_RIGHT" maxHeight="-Infinity" maxWidth="-Infinity" StackPane.alignment="TOP_RIGHT">
    <Button fx:id="minimizeButton" focusTraversable="false" onAction="#onMinimizeButtonClicked">
      <styleClass>
        <String fx:value="window-button" />
        <String fx:value="minimize-button" />
      </styleClass>
      <graphic>
        <StackPane>
          <Region styleClass="icon" />
        </StackPane>
      </graphic>
    </Button>
    <Button fx:id="maximizeButton" focusTraversable="false" onAction="#onMaximiseButtonClicked">
      <styleClass>
        <String fx:value="window-button" />
        <String fx:value="maximize-button" />
      </styleClass>
      <graphic>
        <StackPane>
          <Region styleClass="icon" />
        </StackPane>
      </graphic>
    </Button>
    <Button fx:id="restoreButton" focusTraversable="false" onAction="#onRestoreButtonClicked">
      <styleClass>
        <String fx:value="window-button" />
        <String fx:value="restore-button" />
      </styleClass>
      <graphic>
        <StackPane>
          <Region styleClass="icon" />
        </StackPane>
      </graphic>
    </Button>
    <Button fx:id="closeButton" focusTraversable="false" onAction="#onCloseButtonClicked">
      <styleClass>
        <String fx:value="window-button" />
        <String fx:value="close-button" />
      </styleClass>
      <graphic>
        <StackPane>
          <Region styleClass="icon" />
        </StackPane>
      </graphic>
    </Button>
  </HBox>
</StackPane>
